{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "extraFileExtensions": [".svelte"]
    },
    "plugins": ["svelte3"],
    "extends": ["eslint:recommended"],
    "overrides": [
      {
        "files": ["**/*.svelte"],
        "processor": "svelte3/svelte3"
      }
    ],
    "rules": {
    }, 
    "ignorePatterns": ["node_modules"]
}
